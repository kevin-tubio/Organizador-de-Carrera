<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/16"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controladores.ControladorTabla">
	<children>
		<HBox prefHeight="634.0" prefWidth="1280.0">
			<children>
				<TableView fx:id="tabla"
					onMouseClicked="#habilitarFunciones" tableMenuButtonVisible="true"
					HBox.hgrow="ALWAYS">
					<columns>
						<TableColumn fx:id="numeroActividad" maxWidth="96.0"
							minWidth="50.0" prefWidth="70.0" text="ID" />
						<TableColumn fx:id="nombreActividad" minWidth="389.0"
							prefWidth="690.0" text="Nombre" />
						<TableColumn fx:id="anio" maxWidth="60.0"
							minWidth="40.0" prefWidth="48.0" text="Año" />
						<TableColumn fx:id="periodo" maxWidth="187.0"
							minWidth="79.0" prefWidth="134.0" text="Período" />
						<TableColumn fx:id="nota" prefWidth="326.0"
							text="Nota" />
						<TableColumn fx:id="estado" prefWidth="75.0"
							text="Estado" />
						<TableColumn prefWidth="75.0" text="Tipo"
							visible="false" />
						<TableColumn prefWidth="75.0" text="Horas semanales"
							visible="false" />
						<TableColumn prefWidth="75.0" text="Créditos"
							visible="false" />
					</columns>
					<HBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</HBox.margin>
					<contextMenu>
						<ContextMenu>
							<items>
								<MenuItem mnemonicParsing="false"
									onAction="#agregarMateria" text="Agregar" />
								<MenuItem fx:id="itemContextualEditar"
									mnemonicParsing="false" text="Editar seleccionada" />
								<MenuItem fx:id="itemContextualBorrar"
									mnemonicParsing="false" text="Borrar seleccionada" />
							</items>
						</ContextMenu>
					</contextMenu>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
				</TableView>
			</children>
		</HBox>
	</children>
</AnchorPane>
