<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="ancla" minHeight="600.0" minWidth="1024.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.organizadorcarrera.controladores.ControladorPrincipal">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<top>
				<MenuBar>
					<menus>
						<Menu mnemonicParsing="false" text="%MenuArchivo">
							<items>
								<MenuItem mnemonicParsing="false" text="%MenuArchivoNuevo" />
								<SeparatorMenuItem mnemonicParsing="false" />
								<MenuItem mnemonicParsing="false" onAction="#abrirArchivo" text="%MenuArchivoAbrir" />
								<SeparatorMenuItem mnemonicParsing="false" />
								<MenuItem fx:id="itemGuardar" mnemonicParsing="false" onAction="#persistirCambiosListado" text="%MenuArchivoGuardar" />
								<SeparatorMenuItem mnemonicParsing="false" />
								<MenuItem fx:id="itemSalir" mnemonicParsing="false" onAction="#cerrarPrograma" text="%MenuArchivoSalir" />
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="%MenuEditar">
							<items>
								<MenuItem fx:id="itemAgregar" mnemonicParsing="false" onAction="#agregarMateria" text="%MenuEditarAgregar" />
								<MenuItem fx:id="itemEditar" mnemonicParsing="false" onAction="#editarMateria" text="%MenuEditarEditar" />
								<MenuItem fx:id="itemBorrar" mnemonicParsing="false" onAction="#borrarMateria" text="%MenuEditarBorrar" />
							</items>
						</Menu>
					</menus>
				</MenuBar>
			</top>
			<center>
				<TabPane fx:id="tab" onMouseClicked="#deshabilitarFunciones" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
					<tabs>
						<Tab closable="false" text="%TabTabla">
							<content>
								<fx:include fx:id="planDeEstudios" source="PlanDeEstudios.fxml" />
							</content>
						</Tab>
						<Tab closable="false" text="%TabLista">
							<content>
								<fx:include fx:id="listaDeMaterias" source="ListaDeMaterias.fxml" />
							</content>
						</Tab>
					</tabs>
					<BorderPane.margin>
						<Insets />
					</BorderPane.margin>
				</TabPane>
			</center>
			<bottom>
				<HBox prefHeight="32.0" />
			</bottom>
		</BorderPane>
	</children>
</AnchorPane>
